{
    "name": "cleanvote",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "deploy": "run-p deploy:client deploy:server",
        "deploy:client": "run-s build-client && wrangler pages deploy client/dist",
        "deploy:server": "wrangler deploy server/src/index.ts --minify",
        "serve": "run-p client server",
        "client": "cd client && vite --port 4000",
        "server": "wrangler dev server/src/index.ts",
        "build-client": "cd client && tsc -b && vite build",
        "lint": "eslint ."
    },
    "dependencies": {
        "@zod/mini": "^4.0.0-beta.0",
        "hono": "^4.9.7",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-router-dom": "^7.9.1",
        "react-turnstile": "^1.1.4"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250913.0",
        "@eslint/js": "^9.35.0",
        "@types/bun": "^1.2.21",
        "@types/node": "^22.18.3",
        "@types/react": "^19.1.13",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^4.7.0",
        "eslint": "^9.35.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^15.15.0",
        "npm-run-all": "^4.1.5",
        "sass-embedded": "^1.92.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.43.0",
        "vite": "^6.3.6",
        "wrangler": "^4.36.0"
    }
}
